colorscheme codedark	" Colorscheme of the vim
syntax enable		" Highlight the syntaxt

set number		" Show line number in the editor

set tabstop=4		" Number of visual spaces per tab
set softtabstop=4	" Number of tabs in when editing
set expandtab		" Expand tabs to spaces
set cursorline		" High light the line where the curson is
set showmatch		" Shows matching brackets

set incsearch		" Search as typing characters
set hlsearch		" Highlight matches in search

set wildmenu		" Visual autocomplete for command menu
set showcmd		    " Show command in bottom line
